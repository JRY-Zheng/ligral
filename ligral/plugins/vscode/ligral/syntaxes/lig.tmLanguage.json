{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Ligral",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#single-strings"
		},
		{
			"include": "#digits"
		},
		{
			"include": "#block-comments"
		},
		{
			"include": "#inline-comments"
		},
		{
			"include": "#line-comments"
		},
		{
			"include": "#var-name"
		},
		{
			"include": "#digit-name"
		},
		{
			"include": "#models"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.lig",
				"match": "\\b(digit|route|end|import|using|conf)\\b"
			}]
		},
		"digits": {
			"patterns": [{
				"name": "constant.numeric.lig",
				"match": "\\b\\d+(\\.\\d+)?\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.lig",
			"begin": "\"",
			"end": "\""
		},
		"single-strings": {
			"name": "string.quoted.single.lig",
			"begin": "'",
			"end": "'"
		},
		"line-comments": {
			"name": "comment.line.number-sign.lig",
			"begin": "#",
			"end": "$"
		},
		"inline-comments": {
			"name": "comment.line.percentage.lig",
			"begin": "##",
			"end": "##|$"
		},
		"block-comments": {
			"name": "comment.block.documentation.lig",
			"begin": "###",
			"end": "###"
		},
		"var-name": {
			"begin": "\\[",
			"end": "\\]",
			"patterns": [
				{
					"match": "\\b([_\\w][_\\w\\d]*)\\s*"
				}
			]
		},
		"digit-name": {
			"begin": "\\{",
			"end": "\\}",
			"patterns": [
				{
					"include": "#strings"
				},
				{
					"include": "#single-strings"
				},
				{
					"include": "#digits"
				},
				{
					"match": "\\b([_\\w][_\\w\\d]*)\\s*:",
					"captures": {
						"1": {
							"name": "entity.name.tag.lig"
						}
					}
				}
			]
		},
		"models": {
			"match": "\\b([_\\w][_\\w\\d]*)\\s*",
			"captures": {
				"1": {
					"name": "entity.name.class.lig"
				}
			}
		}
	},
	"scopeName": "source.lig"
}